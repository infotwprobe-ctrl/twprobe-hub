---
// ==============================================
// TWProbe Hub - 2026 極簡公共財版
// ==============================================

const brandName = "TWProbe Hub";
const tagline = "專業知識．獨特觀點．數據支撐";
// SEO Meta: 中立、客觀、結構化
const seoTitle = "TWProbe 體系導覽 | 台灣房產公共知識庫索引";
const seoDesc = "TWProbe 致力於房產資訊的透明化與結構化。本頁面為體系導覽索引，將市場資訊梳理為交易持有、開發工程與投資法規三大脈絡，提供中立客觀的數據分析入口。";
const mainSiteUrl = "https://www.twprobe.com";

// 三大核心板塊
const pillars = [
  {
    title: "交易與持有",
    slug: "real-estate-holding",
    desc: "交易流程與資產管理", // 極簡化描述
    topics: ["購屋流程", "房產銷售", "驗屋重點", "租賃指南", "室內裝修", "管理維護"]
  },
  {
    title: "開發與工程",
    slug: "development-engineering",
    desc: "土地價值與營造細節",
    topics: ["土地開發", "營造工程", "建商評估", "建案分析", "建築設計", "都更危老"]
  },
  {
    title: "投資與法規",
    slug: "investment-regulation",
    desc: "稅務法規與市場趨勢",
    topics: ["市場趨勢", "區域發展", "房貸理財", "法規稅務", "投資策略", "商用房產"]
  },
];

// 九大社群生態系
const ecosystem = [
  { group: "PULSE", sites: [{ n: "X", u: "https://x.com/probe54670", icon: "x" }, { n: "Reddit", u: "https://www.reddit.com/r/TWProbe/", icon: "reddit" }, { n: "Quora", u: "https://taiwanpropertylabbytwprobe.quora.com/", icon: "quora" }] },
  { group: "ECHO", sites: [{ n: "Medium", u: "https://medium.com/@twprobe", icon: "medium" }, { n: "Substack", u: "https://substack.com/@twprobe", icon: "substack" }, { n: "Blogger", u: "https://twprobe.blogspot.com/", icon: "blogger" }] },
  { group: "VISION", sites: [{ n: "YouTube", u: "https://www.youtube.com/@TWProbe", icon: "youtube" }, { n: "Instagram", u: "https://www.instagram.com/twprobe/", icon: "instagram" }, { n: "Pinterest", u: "https://www.pinterest.com/infotwprobe/", icon: "pinterest" }] }
];

// Footer 導覽
const footerLinks = [
    { name: "關於本站", u: "https://twprobe.com/about-twprobe/" },
    { name: "網站地圖", u: "https://twprobe.com/sitemap/" },
    { name: "隱私政策", u: "https://twprobe.com/privacy-policy/" },
    { name: "服務條款", u: "https://twprobe.com/terms-of-service/" },
    { name: "免責聲明", u: "https://twprobe.com/disclaimer/" },
];
---

<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{seoTitle}</title>
    <meta name="description" content={seoDesc}>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;500;600&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <meta property="og:image" content="/images/og-social-preview.jpg" />
    <meta property="twitter:image" content="/images/og-social-preview.jpg" />

    <style>
        :root { 
            --dark: #1A202C; 
            --gray: #4A5568; 
            --light-gray: #718096;
            --blue: #2B6CB0; 
            --bg-gray: #F5F5F7; /* Apple 風格的淺灰底 */
            --bg-hover: #E8E8ED;
        }
        body { font-family: 'Source Sans Pro', 'Noto Sans TC', sans-serif; color: var(--dark); margin: 0; background: #fff; line-height: 1.6; font-size: 17px; letter-spacing: -0.01em; }
        .wrapper { max-width: 980px; margin: 0 auto; padding: 4rem 1.5rem; }

        /* Header: 極簡化 */
        header { display: flex; flex-direction: column; align-items: center; margin-bottom: 4rem; }
        .brand-link { text-decoration: none; display: flex; flex-direction: column; align-items: center; transition: opacity 0.2s; }
        .brand-link:hover { opacity: 0.7; }
        .brand-box { display: flex; align-items: center; gap: 0.8rem; }
        .logo-img { width: 48px; height: 48px; object-fit: contain; }
        h1 { color: var(--dark); font-size: 32px; font-weight: 600; margin: 0; letter-spacing: -0.02em; }
        .tagline { color: var(--blue); font-size: 13px; font-weight: 500; letter-spacing: 0.12em; margin-top: 0.5rem; text-transform: uppercase; }

        /* 文案區：Apple 風格排版 */
        .hero-section { text-align: center; max-width: 720px; margin: 0 auto 5rem; }
        .hero-title { color: var(--dark); font-size: 24px; font-weight: 600; margin-bottom: 1rem; line-height: 1.3; }
        .hero-desc { font-size: 17px; color: var(--light-gray); margin-bottom: 2rem; text-align: justify; text-align-last: center; font-weight: 400; }
        
        /* Apple Style Link Button */
        .main-site-link { 
            display: inline-flex; 
            align-items: center; 
            gap: 0.3rem; 
            color: var(--blue); 
            font-size: 17px; 
            font-weight: 500; 
            text-decoration: none; 
            transition: gap 0.2s; 
        }
        .main-site-link:hover { text-decoration: underline; gap: 0.5rem; }
        .link-arrow { font-size: 14px; }

        /* 三大板塊：乾淨無框感 */
        .pillar-grid { display: grid; gap: 3rem; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); justify-content: center; margin-bottom: 6rem; }
        .pillar-card { display: flex; flex-direction: column; height: 100%; }
        .pillar-header { margin-bottom: 1.25rem; border-bottom: 1px solid #E2E8F0; padding-bottom: 0.75rem; }
        .pillar-title { display: block; color: var(--dark); font-size: 20px; font-weight: 600; text-decoration: none; margin-bottom: 0.25rem; }
        .pillar-title:hover { color: var(--blue); }
        .pillar-desc { font-size: 14px; color: var(--light-gray); margin: 0; }

        .topic-list { display: flex; flex-direction: column; gap: 0; } /* 移除間距，改用分隔線 */
        .topic-link { 
            display: flex; 
            justify-content: space-between; 
            padding: 0.6rem 0; 
            border-bottom: 1px solid #F1F1F1; 
            color: var(--gray); 
            font-size: 15px; 
            font-weight: 400; 
            text-decoration: none; 
            transition: color 0.2s; 
        }
        .topic-link:last-child { border-bottom: none; }
        .topic-link:hover { color: var(--blue); }
        .arrow { opacity: 0; transition: opacity 0.2s; color: var(--blue); }
        .topic-link:hover .arrow { opacity: 1; }

        /* 中間品牌錨點 (Bridge Brand) */
        .mid-brand-section { display: flex; flex-direction: column; align-items: center; margin-bottom: 3rem; opacity: 0.6; transition: opacity 0.3s; }
        .mid-brand-section:hover { opacity: 1; }
        .mid-logo { width: 24px; height: 24px; filter: grayscale(100%); margin-bottom: 0.5rem; }
        .mid-brand-name { font-size: 12px; font-weight: 600; color: var(--dark); letter-spacing: 0.05em; }

        /* Ecosystem: 極簡灰底 */
        .eco-section { background: var(--bg-gray); padding: 3rem 2rem; border-radius: 18px; margin-bottom: 4rem; text-align: center; }
        .eco-grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); justify-content: center; }
        .eco-group-title { font-size: 11px; color: var(--light-gray); margin-bottom: 1.25rem; font-weight: 600; letter-spacing: 0.05em; text-transform: uppercase; }
        .eco-link { color: var(--dark); display: flex; flex-direction: column; align-items: center; gap: 0.6rem; font-size: 13px; font-weight: 500; text-decoration: none; opacity: 0.7; transition: all 0.2s; }
        .eco-link:hover { opacity: 1; transform: translateY(-1px); }
        .icon-svg { width: 26px; height: 26px; fill: currentColor; }

        /* Footer */
        footer { border-top: 1px solid #E2E8F0; padding: 2rem 0; text-align: center; }
        .footer-nav { margin-bottom: 1.5rem; display: flex; justify-content: center; flex-wrap: wrap; gap: 1.5rem; }
        .footer-nav a { color: var(--light-gray); text-decoration: none; font-size: 13px; transition: color 0.2s; }
        .footer-nav a:hover { color: var(--dark); }
        .copyright { font-size: 12px; color: #CBD5E0; }

        @media (max-width: 600px) {
            h1 { font-size: 28px; }
            .brand-box { flex-direction: row; }
            .logo-img { width: 40px; height: 40px; }
            .hero-desc { text-align: left; }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <a href={mainSiteUrl} class="brand-link" title="回 TWProbe 官網首頁">
                <div class="brand-box">
                    <img src="/logo.png" alt="TWProbe Logo" class="logo-img" onerror="this.style.display='none'" />
                    <h1>{brandName}</h1>
                </div>
                <div class="tagline">{tagline}</div>
            </a>
        </header>

        <section class="hero-section">
            <h2 class="hero-title">建構台灣房產的公共知識庫</h2>
            <div class="hero-desc">
                <p>
                    TWProbe 致力於房地產資訊的結構化與透明化。我們整合交易、開發、投資三大領域的數據與法規，提供中立、客觀的市場分析。透過這份體系導覽，讓房產知識成為可及的公共資源。
                </p>
            </div>
            <a href={mainSiteUrl} class="main-site-link">
                前往官網閱讀深度分析 <span class="link-arrow">→</span>
            </a>
        </section>

        <main class="pillar-grid">
            {pillars.map(p => (
                <article class="pillar-card">
                    <header class="pillar-header">
                        <a href={`${mainSiteUrl}/category/${p.slug}/`} class="pillar-title">{p.title}</a>
                        <p class="pillar-desc">{p.desc}</p>
                    </header>
                    <nav class="topic-list">
                        {p.topics.map(t => (
                            <a href={`${mainSiteUrl}/category/${p.slug}/`} class="topic-link">
                                <span>{t}</span>
                                <span class="arrow">→</span>
                            </a>
                        ))}
                    </nav>
                </article>
            ))}
        </main>

        <div class="mid-brand-section">
            <img src="/logo.png" alt="TWProbe" class="mid-logo" />
            <span class="mid-brand-name">TWProbe Ecosystem</span>
        </div>

        <section class="eco-section">
            <div class="eco-grid">
                {ecosystem.map(e => (
                    <div>
                        <div class="eco-group-title">{e.group}</div>
                        <div style="display:flex; justify-content:center; gap:2rem;">
                            {e.sites.map(s => (
                                <a href={s.u} class="eco-link" target="_blank" rel="me noopener noreferrer" title={s.n}>
