---
// ==============================================
// TWProbe Hub - 2026 Final Integrated Master
// ==============================================

const brandName = "TWProbe";
const mainSiteUrl = "https://www.twprobe.com";
const hubUrl = "https://hub.twprobe.com/";

// 靜態資源路徑 (皆位於 public/ 資料夾)
const ogImage = `${hubUrl}og-social-preview.jpg`;
const logoPng = `${hubUrl}logo.png`;
const faviconPng = `${hubUrl}favicon.png`;

const pillars = [
  {
    title: "交易與持有",
    slug: "real-estate-holding",
    desc: "交易流程與資產管理",
    topics: ["購屋流程", "房產銷售", "驗屋重點", "租賃指南", "室內裝修", "管理維護"]
  },
  {
    title: "開發與工程",
    slug: "development-engineering",
    desc: "土地價值與營造細節",
    topics: ["土地開發", "營造工程", "建商評估", "建案分析", "建築設計", "都更危老"]
  },
  {
    title: "投資與法規",
    slug: "investment-regulation",
    desc: "稅務法規與市場趨勢",
    topics: ["市場趨勢", "區域發展", "房貸理財", "法規稅務", "投資策略", "商用房產"]
  },
];

const ecosystem = [
  { group: "PULSE", sites: [{ n: "X", u: "https://x.com/probe54670", icon: "x" }, { n: "Reddit", u: "https://www.reddit.com/r/TWProbe/", icon: "reddit" }, { n: "Quora", u: "https://taiwanpropertylabbytwprobe.quora.com/", icon: "quora" }] },
  { group: "ECHO", sites: [{ n: "Medium", u: "https://medium.com/@twprobe", icon: "medium" }, { n: "Substack", u: "https://substack.com/@twprobe", icon: "substack" }, { n: "Blogger", u: "https://twprobe.blogspot.com/", icon: "blogger" }] },
  { group: "VISION", sites: [{ n: "YouTube", u: "https://www.youtube.com/@TWProbe", icon: "youtube" }, { n: "Instagram", u: "https://www.instagram.com/twprobe/", icon: "instagram" }, { n: "Pinterest", u: "https://www.pinterest.com/infotwprobe/", icon: "pinterest" }] }
];

// 頁尾連結：純中文 3+3 矩陣配置
const footerLinks = [
    { name: "關於本站", u: "https://twprobe.com/about-twprobe/" },
    { name: "網站地圖", u: "https://twprobe.com/sitemap/" },
    { name: "情報矩陣", u: "https://hub.twprobe.com/" },
    { name: "服務條款", u: "https://twprobe.com/terms-of-service/" },
    { name: "隱私政策", u: "https://twprobe.com/privacy-policy/" },
    { name: "免責聲明", u: "https://twprobe.com/disclaimer/" },
];
---

<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <title>TWProbe 情報矩陣 | 台灣房產公共知識庫索引</title>
    <meta name="description" content="探索台灣房產資訊的導覽中心。TWProbe 結構化整合購屋流程、營造工程與法規數據，提供中立且深度的市場分析。">
    <link rel="canonical" href={hubUrl} />

    <link rel="icon" type="image/png" sizes="96x96" href={faviconPng} />
    <link rel="apple-touch-icon" href={faviconPng} />

    <meta property="og:locale" content="zh-TW" />
    <meta property="og:site_name" content="TWProbe" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={hubUrl} />
    <meta property="og:title" content="TWProbe 情報矩陣 | 房產公共知識庫" />
    <meta property="og:description" content="結構化整合台灣房產交易、開發與投資三大脈絡。提供中立、客觀的深度分析。" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="768" />
    <meta property="og:image:height" content="385" />
    <meta property="og:logo" content={logoPng} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@probe54670" />
    <meta name="twitter:title" content="TWProbe 情報矩陣" />
    <meta name="twitter:description" content="一站式掌握台灣房產市場深度情報。" />
    <meta name="twitter:image" content={ogImage} />

    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />

    <style>
        :root { 
            --dark: #1A202C; /* 標題深碳黑 */
            --body-text: #4A5568; /* 內文深灰色 */
            --blue: #2B6CB0; /* 專業藍 */
            --border: #E5E5E5; 
            --item-bg: #FAFAFA; 
        }
        
        body { 
            font-family: 'Source Sans Pro', 'Noto Sans TC', sans-serif; 
            color: var(--body-text); 
            margin: 0; 
            background: #ffffff; 
            line-height: 1.7; /* 電腦版行高 */
            font-size: 18px; /* 電腦版內文 */
            letter-spacing: -0.01em; 
        }

        .wrapper { max-width: 900px; margin: 0 auto; padding: 3.5rem 1.5rem; }

        .compact-header { display: flex; align-items: center; justify-content: center; margin-bottom: 3.5rem; gap: 1.5rem; }
        .brand-section { display: flex; align-items: center; gap: 0.6rem; text-decoration: none; color: inherit; }
        .logo-svg { width: 34px; height: 34px; color: var(--blue); }
        .brand-name { font-size: 24px; font-weight: 800; color: var(--dark); letter-spacing: -0.02em; }
        .divider { width: 1px; height: 24px; background-color: #CBD5E0; }
        .mission-text { font-size: 15px; max-width: 480px; line-height: 1.6; margin: 0; }

        .pillar-grid { display: grid; gap: 2.5rem; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); margin-bottom: 4.5rem; }
        .pillar-header { margin-bottom: 1.5rem; border-bottom: 1px solid var(--border); padding-bottom: 0.8rem; text-align: center; }
        .pillar-title { display: block; color: var(--dark); font-size: 20px; font-weight: 700; text-decoration: none; }
        .pillar-title:hover { color: var(--blue); }
        .pillar-desc { font-size: 13px; color: #718096; margin-top: 0.2rem; }

        .topic-list { display: grid; grid-template-columns: repeat(2, 1fr); gap: 0.8rem; }
        .topic-link { display: flex; justify-content: center; align-items: center; padding: 0.65rem; background: var(--item-bg); border-radius: 6px; color: var(--body-text); font-size: 15px; font-weight: 500; text-decoration: none; transition: all 0.2s ease; }
        .topic-link:hover { background: var(--blue); color: #ffffff; transform: translateY(-1.5px); }

        .eco-section { background: var(--item-bg); padding: 3rem 1.5rem; border-radius: 16px; margin-bottom: 4rem; text-align: center; }
        .eco-grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fit, minmax(160px, 1fr)); }
        .eco-group-title { font-size: 11px; color: #718096; margin-bottom: 1.2rem; font-weight: 700; letter-spacing: 0.08em; text-transform: uppercase; }
        .eco-icons { display: grid; grid-template-columns: repeat(3, 1fr); max-width: 240px; margin: 0 auto; gap: 1rem; }
        .eco-link { color: var(--dark); display: flex; flex-direction: column; align-items: center; gap: 0.5rem; font-size: 12px; text-decoration: none; opacity: 0.6; transition: 0.2s; }
        .eco-link:hover { opacity: 1; color: var(--blue); }
        .icon-svg { width: 22px; height: 22px; fill: currentColor; }

        footer { border-top: 1px solid var(--border); padding: 3.5rem 0; text-align: center; }
        .footer-nav { 
            display: grid;
            grid-template-columns: repeat(3, auto); /* 3x2 矩陣佈局 */
            justify-content: center;
            gap: 1.2rem 3.5rem; 
            margin-bottom: 2.5rem; 
        }
        .footer-nav a { color: var(--body-text); text-decoration: none; font-size: 14px; font-weight: 500; transition: color 0.2s; }
        .footer-nav a:hover { color: var(--blue); }
        .copyright { font-size: 12px; color: #A0AEC0; }

        @media (max-width: 650px) {
            body { font-size: 16px; line-height: 1.6; } /* 手機版內文 */
            .compact-header { flex-direction: column; gap: 1rem; text-align: center; }
            .mission-text { font-size: 14px; }
            .footer-nav { grid-template-columns: repeat(2, auto); gap: 1.2rem 2rem; }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header class="compact-header">
            <a href={mainSiteUrl} class="brand-section">
                <svg class="logo-svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                </svg>
                <span class="brand-name">{brandName}</span>
            </a>
            <div class="divider"></div>
            <p class="mission-text">致力於資訊的結構化與透明化。整合交易、開發、投資三大脈絡，提供數據支撐的深度分析。 [cite: 2025-09-25]</p>
        </header>

        <main class="pillar-grid">
            {pillars.map(p => (
                <article class="pillar-card">
                    <header class="pillar-header">
                        <a href={`${mainSiteUrl}/category/${p.slug}/`} class="pillar-title">{p.title}</a>
                        <p class="pillar-desc">{p.desc}</p>
                    </header>
                    <div class="topic-list">
                        {p.topics.map(t => (
                            <a href={`${mainSiteUrl}/category/${p.slug}/`} class="topic-link">{t}</a>
                        ))}
                    </div>
                </article>
            ))}
        </main>

        <section class="eco-section">
            <div class="eco-grid">
                {ecosystem.map(e => (
                    <div>
                        <div class="eco-group-title">{e.group}</div>
                        <div class="eco-icons">
                            {e.sites.map(s => (
                                <a href={s.u} class="eco-link" target="_blank" rel="me noopener noreferrer" title={s.n}>
                                    <svg class="icon-svg" viewBox="0 0 24 24">
                                        {s.icon === 'x' && <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>}
                                        {s.icon === 'reddit' && <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.196-.491.96 0 1.741.782 1.741 1.74 0 .96-.78 1.74-1.74 1.74-.961 0-1.74-.78-1.74-1.74 0-.175.029-.344.081-.502-1.353-.984-3.238-1.574-5.32-1.637l1.037-4.88 3.486.732c.046.002.091.004.13.004zM5.27 12.19c0-.959.78-1.741 1.74-1.741.96 0 1.74.782 1.74 1.74 0 .96-.78 1.74-1.74 1.74-.96 0-1.74-.78-1.74-1.74zm11.39 6.848c-1.355 1.355-4.437 1.355-5.792 0-1.355-1.355.087-2.797 1.442-4.152 1.355-1.355 4.437-1.355 5.792 0 1.355 1.355-.087 2.797-1.442 4.152zm-1.69-5.108c-.96 0-1.74-.78-1.74-1.74 0-.96.78-1.741 1.74-1.741.96 0 1.74.781 1.74 1.74 0 .96-.78 1.74-1.74 1.74z"/>}
                                        {s.icon === 'youtube' && <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>}
                                        {s.icon === 'medium' && <path d="M13.54 12a6.8 6.8 0 0 1-6.77 6.82A6.8 6.8 0 0 1 0 12a6.8 6.8 0 0 1 6.77-6.82A6.8 6.8 0 0 1 13.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>}
                                        {s.icon === 'substack' && <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>}
                                        {s.icon === 'blogger' && <path d="M21.25 0H2.75C1.23 0 0 1.23 0 2.75v18.5C0 22.77 1.23 24 2.75 24h18.5c1.52 0 2.75-1.23 2.75-2.75V2.75C24 1.23 22.77 0 21.25 0zm-1.5 18h-4.5c-.825 0-1.5-.675-1.5-1.5v-1.5h-4.5c-.825 0-1.5-.675-1.5-1.5v-3c0-.825.675-1.5 1.5-1.5h1.5v-1.5c0-.825.675 1.5-1.5 1.5h4.5c.825 0 1.5.675 1.5 1.5v4.5c0 .825-.675 1.5-1.5 1.5h-1.5v1.5c0 .825.675 1.5-1.5 1.5h1.5v1.5c0 .825-.675 1.5-1.5 1.5z"/>}
                                    </svg>
                                    <span>{s.n}</span>
                                </a>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <footer>
            <nav class="footer-nav">
                {footerLinks.map(f => (
                    <a href={f.u}>{f.name}</a>
                ))}
            </nav>
            <p class="copyright">© 2026 {brandName}. All rights reserved. [cite: 2026-01-28]</p>
        </footer>
    </div>
</body>
</html>
