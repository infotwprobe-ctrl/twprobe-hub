---
// ==============================================
// TWProbe Hub - 2026 專業版 (含 SVG Icon & SEO)
// ==============================================

const brandName = "TWProbe Hub";
const tagline = "專業知識．獨特觀點．數據支撐";
const seoDesc = "TWProbe 房產實驗室的數位戰略總部。整合交易流程、開發工程與投資法規三大核心數據，串聯九大社群平台，為您提供最權威的台灣房產情報。";
const siteUrl = "https://hub.twprobe.com";
const logoUrl = "/logo.png"; // 對應你上傳到 public 的檔案

// 三大核心板塊
const pillars = [
  {
    title: "交易與持有",
    slug: "real-estate-holding",
    topics: ["購屋流程", "房產銷售", "驗屋重點", "租賃指南", "室內裝修", "管理維護"]
  },
  {
    title: "開發與工程",
    slug: "development-engineering",
    topics: ["土地開發", "營造工程", "建商評估", "建案分析", "建築設計", "都更危老"]
  },
  {
    title: "投資與法規",
    slug: "investment-regulation",
    topics: ["市場趨勢", "區域發展", "房貸理財", "法規稅務", "投資策略", "商用房產"]
  },
];

// 九大社群 (SVG Icon 定義在下方)
const ecosystem = [
  { 
    group: "PULSE (即時脈動)", 
    sites: [
      { n: "X", u: "https://x.com/probe54670", icon: "x" },
      { n: "Reddit", u: "https://www.reddit.com/r/TWProbe/", icon: "reddit" },
      { n: "Quora", u: "https://taiwanpropertylabbytwprobe.quora.com/", icon: "quora" }
    ] 
  },
  { 
    group: "ECHO (深度觀點)", 
    sites: [
      { n: "Medium", u: "https://medium.com/@twprobe", icon: "medium" },
      { n: "Substack", u: "https://substack.com/@twprobe", icon: "substack" },
      { n: "Blogger", u: "https://twprobe.blogspot.com/", icon: "blogger" }
    ] 
  },
  { 
    group: "VISION (視覺情報)", 
    sites: [
      { n: "YouTube", u: "https://www.youtube.com/@TWProbe", icon: "youtube" },
      { n: "Instagram", u: "https://www.instagram.com/twprobe/", icon: "instagram" },
      { n: "Pinterest", u: "https://www.pinterest.com/infotwprobe/", icon: "pinterest" }
    ] 
  }
];

// 底部連結 (已調整順序)
const footerLinks = [
    { name: "關於本站", u: "https://twprobe.com/about-twprobe/" },
    { name: "隱私政策", u: "https://twprobe.com/privacy-policy/" },
    { name: "服務條款", u: "https://twprobe.com/terms-of-service/" },
    { name: "免責聲明", u: "https://twprobe.com/disclaimer/" },
    { name: "網站地圖", u: "https://twprobe.com/sitemap/" },
];
---

<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brandName} | {tagline}</title>
    <meta name="description" content={seoDesc}>
    
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />

    <meta property="og:image" content="/images/og-social-preview.jpg" />
    <meta property="twitter:image" content="/images/og-social-preview.jpg" />

    <style>
        :root { --dark: #1A202C; --gray: #4A5568; --blue: #2B6CB0; --navy: #1A365D; --bg-gray: #F7FAFC; }
        body { font-family: 'Source Sans Pro', 'Noto Sans TC', sans-serif; color: var(--gray); margin: 0; background: #fff; line-height: 1.7; font-size: 16px; }
        a { text-decoration: none; transition: all 0.2s; }
        .wrapper { max-width: 960px; margin: 0 auto; padding: 4rem 1.5rem; }

        /* Header */
        header { text-align: center; margin-bottom: 3.5rem; }
        .logo-img { width: 64px; height: 64px; margin-bottom: 1rem; object-fit: contain; }
        h1 { color: var(--dark); font-size: 32px; font-weight: 700; margin: 0; letter-spacing: -0.02em; }
        .tagline { color: var(--blue); font-size: 14px; font-weight: 600; letter-spacing: 0.15em; margin-top: 0.5rem; text-transform: uppercase; }
        
        /* SEO 導言區塊 */
        .intro-text { max-width: 700px; margin: 0 auto 4rem; text-align: center; font-size: 16px; color: #718096; line-height: 1.8; }

        /* 三大板塊 (RWD 優化：min-width 改為 260px 以容納三欄) */
        .pillar-grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); margin-bottom: 5rem; }
        .pillar-title { display: block; color: var(--dark); font-size: 20px; font-weight: 700; margin-bottom: 1.25rem; padding-bottom: 0.5rem; border-bottom: 2px solid #E2E8F0; }
        .pillar-title:hover { color: var(--blue); border-color: var(--blue); }
        
        .topic-list { display: flex; flex-direction: column; gap: 0.5rem; }
        .topic-link { display: block; color: var(--gray); padding: 0.5rem 0.75rem; background: var(--bg-gray); border-radius: 6px; font-size: 15px; font-weight: 500; }
        .topic-link:hover { color: #fff; background: var(--blue); transform: translateX(4px); }

        /* 九大社群 (Icon 版) */
        .eco-section { background: var(--bg-gray); padding: 3rem 1.5rem; border-radius: 16px; margin-bottom: 5rem; text-align: center; }
        .eco-grid { display: grid; gap: 3rem; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); }
        .eco-group-title { font-size: 12px; color: #A0AEC0; margin-bottom: 1.5rem; letter-spacing: 0.1em; text-transform: uppercase; font-weight: 700; }
        .eco-icons { display: flex; justify-content: center; gap: 1.5rem; }
        .eco-link { color: var(--dark); display: flex; flex-direction: column; align-items: center; gap: 0.5rem; font-size: 13px; font-weight: 600; opacity: 0.8; }
        .eco-link:hover { color: var(--blue); opacity: 1; transform: translateY(-2px); }
        .icon-svg { width: 24px; height: 24px; fill: currentColor; }

        /* Footer */
        footer { border-top: 1px solid #E2E8F0; padding-top: 3rem; text-align: center; font-size: 14px; color: #A0AEC0; }
        .footer-nav { margin-bottom: 1.5rem; display: flex; justify-content: center; flex-wrap: wrap; gap: 1rem; }
        .footer-nav a { color: #718096; }
        .footer-nav a:hover { color: var(--blue); }
        .copyright { font-size: 13px; opacity: 0.8; }

        @media (min-width: 1024px) { 
            .logo-img { width: 80px; height: 80px; }
            h1 { font-size: 42px; }
            .pillar-grid { gap: 3rem; }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <img src={logoUrl} alt="TWProbe Logo" class="logo-img" onerror="this.style.display='none'" />
            <h1>{brandName}</h1>
            <div class="tagline">{tagline}</div>
        </header>

        <div class="intro-text">
            {seoDesc}
        </div>

        <main class="pillar-grid">
            {pillars.map(p => (
                <section>
                    <a href={`https://www.twprobe.com/category/${p.slug}/`} class="pillar-title">
                        {p.title} →
                    </a>
                    <div class="topic-list">
                        {p.topics.map(t => (
                            // 將中文轉為 slug 格式，若你有特定網址表可再替換，這裡示範自動轉換
                            <a href={`https://www.twprobe.com/category/${p.slug}/`} class="topic-link">
                                {t}
                            </a>
                        ))}
                    </div>
                </section>
            ))}
        </main>

        <section class="eco-section">
            <div class="eco-grid">
                {ecosystem.map(e => (
                    <div>
                        <div class="eco-group-title">{e.group}</div>
                        <div class="eco-icons">
                            {e.sites.map(s => (
                                // rel="me" 告訴 Google 這些都是我的品牌資產
                                <a href={s.u} class="eco-link" target="_blank" rel="me noopener noreferrer" title={s.n}>
                                    <svg class="icon-svg" viewBox="0 0 24 24">
