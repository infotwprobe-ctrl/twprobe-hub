---
const brandName = "TWProbe Hub";
const tagline = "專業知識．獨特觀點．數據支撐";
const seoTitle = "TWProbe 房產實驗室 | 台灣房產情報與市場分析中心";
const seoDesc = "專注於台灣房地產市場深度分析。從交易與持有流程、營造開發工程到投資法規稅務，TWProbe 提供最具專業深度與數據支撐的知識庫，協助您掌握市場脈動。";

const pillars = [
  { title: "交易與持有", slug: "real-estate-holding", topics: ["購屋流程", "房產銷售", "驗屋重點", "租賃指南", "室內裝修", "管理維護"] },
  { title: "開發與工程", slug: "development-engineering", topics: ["土地開發", "營造工程", "建商評估", "建案分析", "建築設計", "都更危老"] },
  { title: "投資與法規", slug: "investment-regulation", topics: ["市場趨勢", "區域發展", "房貸理財", "法規稅務", "投資策略", "商用房產"] }
];

const ecosystem = [
  { group: "PULSE (即時脈動)", sites: [{ n: "X", u: "https://x.com/probe54670", icon: "x" }, { n: "Reddit", u: "https://www.reddit.com/r/TWProbe/", icon: "reddit" }, { n: "Quora", u: "https://taiwanpropertylabbytwprobe.quora.com/", icon: "quora" }] },
  { group: "ECHO (深度觀點)", sites: [{ n: "Medium", u: "https://medium.com/@twprobe", icon: "medium" }, { n: "Substack", u: "https://substack.com/@twprobe", icon: "substack" }, { n: "Blogger", u: "https://twprobe.blogspot.com/", icon: "blogger" }] },
  { group: "VISION (視覺情報)", sites: [{ n: "YouTube", u: "https://www.youtube.com/@TWProbe", icon: "youtube" }, { n: "Instagram", u: "https://www.instagram.com/twprobe/", icon: "instagram" }, { n: "Pinterest", u: "https://www.pinterest.com/infotwprobe/", icon: "pinterest" }] }
];

const footerLinks = [
    { name: "關於本站", u: "https://twprobe.com/about-twprobe/" },
    { name: "網站地圖", u: "https://twprobe.com/sitemap/" },
    { name: "隱私政策", u: "https://twprobe.com/privacy-policy/" },
    { name: "服務條款", u: "https://twprobe.com/terms-of-service/" },
    { name: "免責聲明", u: "https://twprobe.com/disclaimer/" },
];
---

<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{seoTitle}</title>
    <meta name="description" content={seoDesc}>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />
    <style>
        :root { --dark: #1A202C; --gray: #4A5568; --blue: #2B6CB0; --bg-gray: #F7FAFC; }
        body { font-family: 'Source Sans Pro', 'Noto Sans TC', sans-serif; color: var(--gray); margin: 0; background: #fff; line-height: 1.7; font-size: 18px; }
        .wrapper { max-width: 900px; margin: 0 auto; padding: 4rem 1.5rem; }

        /* Header: Logo 與 標題並排 */
        header { display: flex; flex-direction: column; align-items: center; margin-bottom: 3rem; }
        .brand-box { display: flex; align-items: center; gap: 1rem; }
        .logo-img { width: 56px; height: 56px; object-fit: contain; }
        h1 { color: var(--dark); font-size: 40px; font-weight: 700; margin: 0; }
        .tagline { color: var(--blue); font-size: 15px; font-weight: 600; letter-spacing: 0.15em; margin-top: 0.5rem; }

        /* Landing Page Copywriting 區塊 */
        .hero-copy { text-align: center; max-width: 720px; margin: 0 auto 4rem; }
        .hero-copy h2 { color: var(--dark); font-size: 24px; margin-bottom: 1.5rem; }
        .hero-copy p { font-size: 18px; color: var(--gray); margin-bottom: 1.5rem; }

        /* 三大板塊 */
        .pillar-grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); margin-bottom: 5rem; }
        .pillar-title { display: block; color: var(--dark); font-size: 22px; font-weight: 700; margin-bottom: 1.25rem; border-bottom: 2px solid #E2E8F0; padding-bottom: 0.5rem; }
        .topic-link { display: block; background: var(--bg-gray); padding: 0.6rem 1rem; border-radius: 8px; margin-bottom: 0.5rem; color: var(--gray); font-weight: 500; text-decoration: none; }
        .topic-link:hover { background: var(--blue); color: #fff; transform: translateX(5px); }

        /* 生態系圖示 */
        .eco-section { background: var(--bg-gray); padding: 3rem 2rem; border-radius: 20px; margin-bottom: 5rem; text-align: center; }
        .eco-grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); }
        .eco-link { color: var(--dark); display: flex; flex-direction: column; align-items: center; gap: 0.5rem; font-size: 14px; font-weight: 600; text-decoration: none; }
        .eco-link:hover { color: var(--blue); }
        .icon-svg { width: 28px; height: 28px; fill: currentColor; }

        /* Footer: 置中與間距修正 */
        footer { border-top: 1px solid #E2E8F0; padding: 4rem 0 2rem; text-align: center; }
        .footer-nav { margin-bottom: 1.5rem; display: flex; justify-content: center; flex-wrap: wrap; gap: 1.5rem; }
        .footer-nav a { color: var(--gray); text-decoration: none; font-size: 15px; }
        .footer-nav a:hover { color: var(--blue); }
        .copyright { font-size: 13px; color: #A0AEC0; margin-top: 1rem; }

        @media (max-width: 600px) {
            h1 { font-size: 28px; }
            .brand-box { flex-direction: row; gap: 0.5rem; }
            .logo-img { width: 40px; height: 40px; }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="brand-box">
                <img src="/logo.png" alt="TWProbe Logo" class="logo-img" />
                <h1>{brandName}</h1>
            </div>
            <div class="tagline">{tagline}</div>
        </header>

        <section class="hero-copy">
            <h2>解構台灣房產的數據真相</h2>
            <p>
                歡迎來到 TWProbe Hub。在這裡，我們不僅記錄市場，更分析趨勢。
                作為台灣房產情報的領航者，我們整合了從土地開發、營造工程到最終交易的所有關鍵節點。
            </p>
            <p>
                無論您是專業開發商、投資決策者，還是尋求理想居所的自住客，
                我們的生態系統將為您提供最精準的決策支持。
            </p>
        </section>

        <main class="pillar-grid">
            {pillars.map(p => (
                <section>
                    <a href={`https://www.twprobe.com/category/${p.slug}/`} class="pillar-title">{p.title} →</a>
                    <nav class="topic-list">
                        {p.topics.map(t => (
                            <a href={`https://www.twprobe.com/category/${p.slug}/`} class="topic-link">{t}</a>
                        ))}
                    </nav>
                </section>
            ))}
        </main>

        <footer>
            <nav class="footer-nav">
                {footerLinks.map(f => (
                    <a href={f.u}>{f.name}</a>
                ))}
            </nav>
            <p class="copyright">© 2026 TWProbe Hub. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>
